
    
    
    <div id="editPost" class="modal">
        <div class="modal-content">
        <a href="" onclick="window.history.go(-1); return false;" class="modal-close btn right waves-effect waves-green btn-flat"> &times;</a>

        <p style="color: rgb(236, 236, 236);">Edit Post</p>
        <div class="chip res">
            <img src="/uploads/user/{{profileimage}}" alt="">
            <a class="name-color" href="/feed/user/{{user._id}}"> {{firstName}} {{lastName}} </a>
            </div>
        <form action="/feed/{{story._id}}" method="POST" >
            <input type="hidden" name="_method" value="PUT">

            <div class="row">
                <div class="input-field-post">
                    <select class="browser-default" name="status">
                        {{#select story.status}}
                        <option id="op-post" value="public"  selected > Public</option>
                        <option id="op-post" value="private" >Private</option>
                        {{/select}}

                    </select>
                    
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <textarea id="body" class="dark-theme" name="body">{{story.body}}</textarea>
                </div>
            </div>

            

            <div class="row">
                <input type="submit" value="Post" class="btn col s12 htp">
                
            </div>
        </form>
        </div>
        
    </div>        


