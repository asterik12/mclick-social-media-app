                </div>

                
            </div>
            
        </div>


       <div class="row">
           <div class="container">
              <h4 style="color: aliceblue;">News Feed</h4>
           </div>
       </div>
        

        <div class="row">
            {{#each stories}}
                <div class="container" >
                    <div class="card">
                        <div class="card-image red">
                            {{{editIcon user ../user _id}}}
                            
                           
                        </div>
                        <div class="chip res">
                                <img src="/uploads/user/{{user.image}}" alt="">
                                <a class="name-color" href="/feed/user/{{user._id}}"> {{user.firstName}} {{user.lastName}} </a>
                        </div>
                        
                      
                        <div class="card-content">
                            <span class="card-date">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                            <span class="card-date capitalize">&bull; {{status}} </span>
                            <p> {{stripTags (truncate body 150)}} </p>
                            <a href="/feed/{{_id}}">View More</a>
                            <br>
    
                        </div>

                        {{{validImage image}}}
                        {{!-- <div>
                           <img src="/uploads/posts/{{image}}" alt="" height="300px" width="100%" />
                       </div> --}}
                        <div class="card-action">
                            <div class="row" style="margin: 0% !important;">
                                <div class="col s3 m4 l4">
                                    <form action="/feed/{{_id}}/like" method="POST">
                                                <input type="hidden" name="_method" value="PUT">
                                                
                                                <input type="submit" class="btn-small material-icons round" value="thumb_up"/>
                                                
                                                <!-- Modal Trigger -->
                                                <a class="modal-trigger" href="#modal1">{{likes.length}} Likes</a>

                                                <!-- Modal Structure -->
                                                <div id="modal1" class="modal">
                                                    <div class="modal-content">
                                                    <h4>Post Liked By</h4>
                                                    <li>{{likes}}</li>
                                                    </div>
                                                    <div class="modal-footer">
                                                    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                                                    </div>
                                                </div>
                                                        
                                    </form>

                                </div>
                                <div class="col s12 m4 l4">
                                    <form action="" method="POST">
                                                <input type="hidden" name="_method" value="PUT">
                                                
                                                <input type="submit" class="btn-small material-icons round" value="message"/>
                                                comments
                                                        
                                    </form>
                                </div>
                                <div class="col s12 m4 l4">
                                    <form action="" method="POST">
                                                <input type="hidden" name="_method" value="PUT">
                                                
                                                <input type="submit" class="btn-small material-icons round" value="share"/>
                                                share
                                                        
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>

            {{else}}
                <p>No stories to display</p>

            {{/each}}
        </div>
    </div>


     <div class="col s12 m4 l3">
         <div class="top-right-stories">
            <h6 style="color: aliceblue;">Stories</h6>
                <form action="/feed/status" method="POST" enctype="multipart/form-data" >
                        
                    <input type="file" class="form-control" name="storiesimage" id="storiesimage" />
                         
                    <input type="submit" value="Add" class="btn htp">
                    
                </form>

            <div class="row">
                {{#each timestories}}
                    <div class="timestories-wall" >
                        
                            
                            <p style={float:right; top:2px}>
                                {{{TimeStatus storiesimage}}}
                            {{user.displayName}}
                            <span class="card-date">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>

                            </p>
                            
                    </div>

                {{else}}
                    <p>No stories to display</p>

                {{/each}}
            </div>
                
         </div>
        <div class="med-right-chat-active">
              <h6 style="color: aliceblue;">Active Users</h6>

              {{#each activeUsers}}
              <li style="list-style-type: none;">
                    <div class="chip res">
                                <img src="/uploads/user/{{image}}" alt="">
                                <a class="name-color" href="/feed/user/{{user._id}}"> {{firstName}} {{lastName}} </a>
                    </div>
              </li>
                    

              {{/each}}
                
        </div>
    </div>
  </div>

     
