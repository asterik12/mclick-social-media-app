<div class="row">
    
    <div class="col s12 m1 l1"></div>
    <div class="col s12 m6 l6">
        <div class="card story">
            <div class="card-image btn-floating waves-effect waves-light red right pad-23">
                {{{editIcon story.user user story._id false}}}
            </div>

            <div class="chip res">
                <img src="{{story.user.image}}" alt="">
                <a class="name-color" href="/stories/user/{{story.user._id}}"> {{story.user.displayName}} </a>
            </div>
            
            <div class="card-content">
                <span class="card-date">{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-date capitalize">&bull; {{story.status}} </span>
                <br>
                {{{story.body}}}
            </div>
            <div class="card-action">
                <div class="row">
                    <div class="col s12 m4 l4">
                        <form action="/feed/{{_id}}/like" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    
                                    <input type="submit" class="btn-small material-icons" value="thumb_up"/>
                                    {{story.likes.length}} Likes
                                            
                        </form>
                    </div>
                    <div class="col s12 m4 l4">
                        <form action="/feed/{{_id}}/" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    
                                    <input type="submit" class="btn-small material-icons" value="message"/>
                                     comments
                                            
                        </form>
                    </div>
                    <div class="col s12 m4 l4">
                        <form action="/share" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    
                                    <input type="submit" class="btn-small material-icons" value="share"/>
                                     share
                                            
                        </form>
                    </div>
                </div>
                
             </div>
        </div>
    </div>
    <div class="col s12 m4 l5">
        <div class="card story">
            
            
            <div class="card-content">
                <h4>Comments</h4>
            </div>
        </div>
    </div>
            
                
           

  
        
     
</div>
