<div class="row">
    
    <div class="col s12 m1 l1"></div>
    <div class="col s12 m6 l6">
        <div class="card story">
            <div class="card-image right pad-23">
                {{{editIcon story.user user story._id false}}}
            </div>

            <div class="chip res">
                <img src="/uploads/user/{{story.user.image}}" alt="">
                <a class="name-color" href="/feed/user/{{story.user._id}}"> {{story.user.firstName}} {{story.user.lastName}} </a>
            </div>
            
            <div class="card-content">
                <span class="card-date">{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-date capitalize">&bull; {{story.status}} </span>
                <br>
                {{{story.body}}}
            </div>

            {{{validImageEnlarge story.image}}}
            
                {{!-- <ul class="collapsible" style="margin-top:-5px; margin-bottom:-5px">
                    <li>
                    <div class="collapsible-header">{{{checkLikes story.likes 1}}}</div>
                    <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
                    </li>
                </ul> --}}
            {{{checkLikes story.likes 1}}}

            <div class="card-action">
                
                <div class="row">
                    <div class="col s12 m4 l4">
                        <form action="/feed/{{story._id}}/like" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    
                                    <input type="submit" class="btn-small material-icons" value="thumb_up"/>
                                    Like
                        </form>
                        
                    </div>
                    <div class="col s12 m4 l4">
                        <form action="">
                                    
                                    <input type="submit" class="btn-small material-icons" value="message"/>
                                     {{{checkComments story.comments 1}}}
                                            
                        </form>
                    </div>
                    <div class="col s12 m4 l4">
                        <form action="/share" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    
                                    <input type="submit" class="btn-small material-icons" value="share"/>
                                     share
                                            
                        </form>
                    </div>
                </div>
                
             </div>
            
        </div>
    </div>
    <div class="col s12 m4 l5">
        <div class="card story">
            
            
            <div class="card-content">
                <h4>Comments</h4>
                {{#each comment}}
                <div class="card-story" style="background-color: rgba(42, 42, 43, 0.959); border-radius:5px">
                    <div class="chip res">
                        <img src="/uploads/user/{{user.image}}" alt="">
                        <a class="name-color" href="/feed/user/{{user._id}}"> {{user.firstName}} {{user.lastName}} </a>
                         <span class="card-date">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>

                    </div>
                    <div class="card-content" style="margin:6px">
                        {{text}}
                    </div>

                </div>

                {{/each}}
                <form action="/feed/{{story._id}}/comments" method="POST">
                                
                     <input type="hidden" name="_method" value="PUT">
                    
                    <div class="row">
                        <div class="input-field-text">
                            <textarea id="body" class="dark-theme" name="comment" placeholder=" Add comment, {{name}} "></textarea>
                        </div>

                    </div>


                    <div class="row">
                        <input type="submit" class="btn htp right" value="Post" />
                    </div>
                </form>

            </div>
        </div>
    </div>
            
                
           

  
        
     
</div>
