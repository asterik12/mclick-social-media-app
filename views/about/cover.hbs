<div class="row">
    <div class="col s12 m4 l2"></div>
    <div class="col s12 m4 l8">

        <div class="card story">
           <h4 >Edit Cover Photo</h4> 
         
                  <div class="row" style="padding: 2%;">
                    
                    <form href="/cover/{{id}}" class="col s12" method="POST" enctype="multipart/form-data">
                    
                    

                    <div class = "row">
                      <label>Cover Photo</label>
                      <div class = "file-field">
                          <div class = "btn">
                            <span>Browse</span>
                            <input type = "file" name="cover" id="cover" />
                          </div>
                          
                          <div class = "file-path-wrapper">
                            <input class = "file-path validate" type = "text" 
                                placeholder = "Upload file" />
                          </div>
                      </div>
                   </div>
                <img src="/uploads/user/cover/{{cover}}" alt="" width="700px" height="400px">

                    
                    <input type="submit" class="btn col s1 waves-effect waves-light right" value="Save"/>

                    </form>

                </div>

            </div>
         </div>
    </div>
            