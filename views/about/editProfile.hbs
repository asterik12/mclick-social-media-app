<div class="row">
    <div class="col s12 m4 l2"></div>
    <div class="col s12 m4 l8">

        <div class="card story">
           <h2>Edit Profile</h2> 
           <ul class="collapsible">
            <li class="active">
              <div class="collapsible-header"><i class="material-icons">filter_drama</i>Account Details</div>
              <div class="collapsible-body"><span>
                  <div class="row">
                    <form href="/editProfile" class="col s12" method="POST" >
                    <div class="row">
                      <div class="col s6">
                        <label for="first_name">First Name</label>
                        <input id="first_name" type="text" class="validate" value="{{firstName}}"> 
                      </div>
                      <div class="col s6">
                        <label for="first_name">Last Name</label>
                        <input id="last_name" type="text" class="validate" value="{{lastName}}">
                      </div>
                        
                        
                    </div>
                    
                    <div class="row">
                        <div class="col s6">
                          <label for="email">Email</label>
                          <input id="email" type="email" class="validate" disabled>
                        </div>
                        <div class="col s6">
                          <label for="gender"> Gender</label>
                          <select class="browser-default">
                          <option value="" disabled selected>Select</option>
                          <option value="1">Male</option>
                          <option value="2">Female</option>
                          <option value="3">Other</option>
                        </select>
                        </div>
                        
                    </div>
                    <div class="row">
                      <div class="col s6">
                        <label for="dob">Birth Date</label>
                        <input type="text" class="datepicker">
                      </div>
                    </div>
                    
                    

                    <div class = "row">
                      <label>Profile Photo</label>
                      <div class = "file-field">
                          <div class = "btn">
                            <span>Browse</span>
                            <input type = "file" />
                          </div>
                          
                          <div class = "file-path-wrapper">
                            <input class = "file-path validate" type = "text"
                                placeholder = "Upload file" />
                          </div>
                      </div>
                   </div>
                    <input type="submit" class="btn col s1 waves-effect waves-light right" value="Save"/>

                    </form>
                </div>
              </span></div>
            </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">place</i>Basic Information</div>
      <div class="collapsible-body"><span>
                  <div class="row">
                    <form href="/editProfile" class="col s12" method="POST" >
                    <div class="row">
                      <div class="col s6">
                        <label for="work">Work</label>
                        <input id="work" type="text" class="validate"> 
                      </div>
                      <div class="col s6">
                        <label for="current_city">Current City</label>
                        <input id="current_city" type="text" class="validate">
                       </div>
                    </div>

                    <div class="row">
                      <div class="col s6">
                        <label for="Hometown">HomeTown</label>
                        <input id="Hometown" type="text" class="validate"> 
                      </div>
                      <div class="col s6">
                        <label for="hobbies">Hobbies</label>
                        <input id="hobbies" type="text" class="validate">
                       </div>
                    </div>
                    
                   
                    

                    <input type="submit" class="btn col s1 waves-effect waves-light right" value="Save"/>

                    </form>
                </div>
              </span></div>
    </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">books</i>Educational Qualification</div>
      <div class="collapsible-body"><span>
                  <div class="row">
                    <form href="/editProfile" class="col s12" method="POST" >
                    <div class="row">
                      <div class="col s6">
                        <label for="school">School/College</label>
                        <input id="school" type="text" class="validate"> 
                      </div>
                      
                    

                    <div class="row">
                        <div class="col s12">
                          <label for="degree"> Degree</label>
                          <select class="browser-default">
                          <option value="" disabled selected>Select</option>
                          <option value="1">BSc</option>
                          <option value="2">BA</option>
                          <option value="3">MSc</option>
                          <option value="1">MA</option>
                          <option value="2">Bcom</option>
                          <option value="3">Mcom</option>
                          <option value="1">BE</option>
                          <option value="2">Btech</option>
                          <option value="3">Mtech</option>
                          <option value="1">MBBS</option>
                          <option value="2">MS</option>
                        </select>
                        </div>
                    </div>
                    <input type="submit" class="btn col s1 waves-effect waves-light right" value="Save"/>

                    </form>
                </div>
              </span></div>
    </li>
  </ul>
                            
                
               
        </div>
    </div>
    <div class="col s12 m4 l2"></div>
    
   
        
   </div> 
    
    
</div>
